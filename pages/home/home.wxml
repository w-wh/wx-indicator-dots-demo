<!--pages/home/home.wxml-->
<view class='title'>修改dot之间的间距:</view>
<view class='spacing'>
  <swiper 
    indicator-dots="{{true}}"
    autoplay="{{true}}" 
    interval="{{3000}}" 
    duration="{{500}}"
    circular="{{true}}"
    indicator-active-color="#28A5F6"
    style="height:{{400}}rpx;">
    <block wx:for="{{imgUrls}}" wx:key="{{key}}">
      <swiper-item>
        <image src="{{item}}"/>
      </swiper-item>
    </block>
  </swiper>
</view>

