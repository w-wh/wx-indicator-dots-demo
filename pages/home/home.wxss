.spacing swiper-item image, .shape swiper-item image, .location swiper-item image {
  width: 750rpx;
  height: 400rpx;
}
/* 修改dot之间的间距 */
.spacing .wx-swiper-dots .wx-swiper-dot:nth-of-type(n+2) {
  margin-left: 30rpx;
}

/* 修改dot形状 */
.shape .wx-swiper-dots .wx-swiper-dot{
  width: 40rpx;    /*宽*/
  height: 10rpx;   /*高*/
  border-radius: 4rpx;  /*圆角*/
}

